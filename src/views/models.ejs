<div class="col-md-4">
  <div class="card mb-4 shadow-sm">
    <model-viewer 
      class="model" src=<%="./assets/models/glb/" + product.modelAndroid %>
      ios-src=<%="./assets/models/usdz/" + product.modelIos %> 
      auto-rotate camera-controls
      ar 
      environment-image="aircraft_workshop_01_1k.hdr"
      poster=<%="./assets/thumbnails/" + product.thumbnail %> 
      >
      <button
        slot="ar-button"
        style="
          background-color: white;
          position: absolute;
          top: 10px;
          right: 10px;
          border: none;
        "
      >
        Ver en AR
      </button>
  
    </model-viewer>
    <div class="card-body">
      <p class="card-text"><%= product.info.message %></p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
          <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
        </div>
        <small class="text-muted">9 mins</small>
      </div>
    </div>
  </div>
</div>  